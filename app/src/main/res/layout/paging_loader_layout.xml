<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:indeterminate="true"
        app:hideAnimationBehavior="outward"
        app:indicatorColor="#FFDCB0"
        android:layout_marginHorizontal="@dimen/default_20_dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:indicatorDirectionLinear="leftToRight"
        app:showAnimationBehavior="inward"
        app:trackColor="#FFA433" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/searchAgainId"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:visibility="gone"
        android:layout_marginHorizontal="@dimen/default_20_dp"
        android:layout_marginTop="@dimen/default_30_dp"
        android:elevation="0dp"
        android:paddingHorizontal="20dp"
        android:text="retry"
        android:textSize="@dimen/default_14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loader"
        tools:ignore="TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>